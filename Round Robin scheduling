#include <stdio.h>

int main() {
    int n, qt, i, bt[10], wt[10] = {0}, tat[10] = {0}, rem_bt[10};
    scanf("%d %d", &n, &qt); // Processes and time quantum
    for (i = 0; i < n; i++) { scanf("%d", &bt[i]); rem_bt[i] = bt[i]; }

    int t = 0;
    while (1) {
        int done = 1;
        for (i = 0; i < n; i++) {
            if (rem_bt[i] > 0) {
                done = 0;
                if (rem_bt[i] > qt) { rem_bt[i] -= qt; t += qt; }
                else { t += rem_bt[i]; wt[i] = t - bt[i]; tat[i] = t; rem_bt[i] = 0; }
            }
        }
        if (done) break;
    }

    for (i = 0; i < n; i++) printf("%d\t%d\t%d\t%d\n", i + 1, bt[i], wt[i], tat[i]);
}
